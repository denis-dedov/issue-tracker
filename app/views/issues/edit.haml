%h2 Edit Issue

= form_for(@issue) do |f|
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :description
    %br
    = f.text_field :description
  .field
    = f.label :status
    %br
    = f.select :status, Issue::STATUSES, {}, disabled: supress_status_change?
  .field
    = f.label :assignee
    %br
    = f.collection_select :assignee_id, assignee_options, :id, :to_s, { prompt: 'Select Manager' }, disabled: supress_assignee_change?

  .created= @issue.created_at.to_s(:long)
  .updated= @issue.updated_at.to_s(:long)

  .actions
    = f.submit 'Update'
