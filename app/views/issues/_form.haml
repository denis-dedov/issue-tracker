= form_for(@issue) do |f|
  = error_messages(@issue)
  .form-row
    .form-group.col-md-6
      = f.label :title
      = f.text_field :title, class: 'form-control'
  .form-row
    .form-group.col-md-6
      = f.label :description
      = f.text_area :description, rows: 7, class: 'form-control'
  - if current_user.is_admin? || @issue.persisted?
    .form-row
      .form-group.col-md-2
        = f.label :status
        = f.select :status, Issue::STATUSES, {}, disabled: supress_attr_change?, class: 'form-control'

      .form-group.col-md-3.col-md-offset-1
        = f.label :assignee
        = f.collection_select :assignee_id, assignee_options, :id, :to_s, { include_blank: 'Select Manager' }, disabled: supress_attr_change?, class: 'form-control'

  = f.submit submit_title, class: 'btn btn-success'
