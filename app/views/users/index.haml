= form_for(User.new, url: invite_user_path) do |f|

  .form-group.form-inline.float-right
    = f.email_field :email, title: 'email', class: 'form-control'
    = f.submit 'Invite', class: 'btn btn-success'

%h3 The List of Users

%table.table
  %thead
    %tr
      %th Full Name
      %th Role
      %th Email Address
      %th Confirmed
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.to_s, edit_user_path(user.id)
        %td= user.role
        %td= user.email
        %td= user.confirmed? ? 'yes' : 'no'

= paginate @users
